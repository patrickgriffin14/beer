<h1>Listing brews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Origin</th>
      <th>Website</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brews.each do |brew| %>
      <tr>
        <td><%= brew.title %></td>
        <td><%= brew.description %></td>
        <td><%= brew.image_url %></td>
        <td><%= brew.origin %></td>
        <td><%= brew.website %></td>
        <td><%= brew.price %></td>
        <td><%= link_to 'Show', brew %></td>
        <td><%= link_to 'Edit', edit_brew_path(brew) %></td>
        <td><%= link_to 'Destroy', brew, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brew', new_brew_path %>
